<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cat.entity">
    <class name="Person">
        <id name="id" type="long">
            <generator class="foreign">
                <param name="property">card</param>
            </generator>
        </id>
        <property name="name"/>
        <!--<property name="card" type="int"/>-->
        <one-to-one name="card" class="Card" cascade="save-update" constrained="true"/>
        <!--<many-to-one name="personCard" column="cardId" cascade="all"/>-->
    </class>

    <class name="Card">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="no"/>
    </class>
</hibernate-mapping>